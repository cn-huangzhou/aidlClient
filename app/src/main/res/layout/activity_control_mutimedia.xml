<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.ControlMutimediaActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="执行多媒体控制"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_operation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="操作类型"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <Spinner
        android:id="@+id/sp_op_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/media_opration_type"
        app:layout_constraintBottom_toBottomOf="@id/tv_operation"
        app:layout_constraintStart_toEndOf="@id/tv_operation"
        app:layout_constraintTop_toTopOf="@id/tv_operation" />

    <TextView
        android:id="@+id/tv_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="多媒体应用类别"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sp_op_type" />

    <Spinner
        android:id="@+id/sp_app_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/media_app_type"
        app:layout_constraintBottom_toBottomOf="@id/tv_app"
        app:layout_constraintStart_toEndOf="@id/tv_app"
        app:layout_constraintTop_toTopOf="@id/tv_app" />

    <TextView
        android:id="@+id/tv_play_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="音乐播放模式"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sp_app_type" />

    <Spinner
        android:id="@+id/sp_play_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/music_play_mode"
        app:layout_constraintBottom_toBottomOf="@id/tv_play_mode"
        app:layout_constraintStart_toEndOf="@id/tv_play_mode"
        app:layout_constraintTop_toTopOf="@id/tv_play_mode" />

    <TextView
        android:id="@+id/tv_audio_src"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="音频源类型"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sp_play_mode" />

    <Spinner
        android:id="@+id/sp_audio_src"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/audio_type"
        app:layout_constraintBottom_toBottomOf="@id/tv_audio_src"
        app:layout_constraintStart_toEndOf="@id/tv_audio_src"
        app:layout_constraintTop_toTopOf="@id/tv_audio_src" />

    <TextView
        android:id="@+id/tv_frequency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="频道"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sp_audio_src" />

    <EditText
        android:id="@+id/et_frequenc_int"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="90"
        app:layout_constraintBottom_toBottomOf="@id/tv_frequency"
        app:layout_constraintStart_toEndOf="@id/tv_frequency"
        app:layout_constraintTop_toTopOf="@id/tv_frequency" />

    <EditText
        android:id="@+id/et_frequenc_dec"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@id/tv_frequency"
        app:layout_constraintStart_toEndOf="@id/et_frequenc_int"
        app:layout_constraintTop_toTopOf="@id/tv_frequency" />

    <TextView
        android:id="@+id/tv_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="歌手名"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_frequenc_int" />
    <EditText
        android:id="@+id/et_singer"
        app:layout_constraintTop_toTopOf="@id/tv_singer"
        app:layout_constraintBottom_toBottomOf="@id/tv_singer"
        app:layout_constraintStart_toEndOf="@id/tv_singer"
        android:layout_width="220dp"
        android:text="汪峰"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_music_name"
        app:layout_constraintTop_toBottomOf="@id/tv_singer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="歌曲名"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:id="@+id/et_misc"
        android:text="春天里"
        app:layout_constraintTop_toTopOf="@id/tv_music_name"
        app:layout_constraintBottom_toBottomOf="@id/tv_music_name"
        app:layout_constraintStart_toEndOf="@id/tv_music_name"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_tag"
        app:layout_constraintTop_toBottomOf="@id/tv_music_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="标签"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:id="@+id/et_tag"
        android:text="中国移动"
        app:layout_constraintTop_toTopOf="@id/tv_tag"
        app:layout_constraintBottom_toBottomOf="@id/tv_tag"
        app:layout_constraintStart_toEndOf="@id/tv_tag"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_phone"
        app:layout_constraintTop_toBottomOf="@id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="10dp"
        android:text="电话"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent" />
    <EditText
        android:id="@+id/et_phone"
        app:layout_constraintTop_toTopOf="@id/tv_phone"
        app:layout_constraintBottom_toBottomOf="@id/tv_phone"
        app:layout_constraintStart_toEndOf="@id/tv_phone"
        android:inputType="phone"
        android:text="10086"
        android:layout_width="220dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_commit"
        android:text="应用"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>