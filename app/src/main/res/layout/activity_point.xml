<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".position.PointActivity">

    <include layout="@layout/item_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                style="@style/Text_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="设置位置信息" />

            <TextView
                android:id="@+id/tv_poi_type"
                style="@style/Text_Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="位置类型" />

            <EditText
                android:id="@+id/et_poi_type"
                style="@style/Text_Body_Pri"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/tv_poi_type"
                android:inputType="number"
                android:text="351" />

            <TextView
                android:id="@+id/tv_poi_long"
                style="@style/Text_Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_poi_type"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="收藏点经纬度" />

            <EditText
                android:id="@+id/et_poi_long"
                style="@style/Text_Body_Pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_poi_type"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/tv_poi_long"
                android:text="12141938" />

            <EditText
                android:id="@+id/et_poi_lat"
                style="@style/Text_Body_Pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_poi_type"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/et_poi_long"
                android:text="3116152" />

            <TextView
                android:id="@+id/tv_dis_long"
                style="@style/Text_Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_poi_long"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="显示点经纬度" />

            <EditText
                android:id="@+id/et_dis_long"
                style="@style/Text_Body_Pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_poi_long"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/tv_dis_long"
                android:text="12141708" />

            <EditText
                android:id="@+id/et_dis_lat"
                style="@style/Text_Body_Pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_poi_long"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/et_dis_long"
                android:text="3116179" />

            <TextView
                android:id="@+id/tv_poi_id"
                style="@style/Text_Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_dis_long"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="位置ID" />

            <EditText
                android:id="@+id/et_poi_id"
                style="@style/Text_Body_Pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_dis_long"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/tv_poi_id"
                android:text="4294967295" />

            <TextView
                android:id="@+id/tv_child_num"
                style="@style/Text_Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_poi_id"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="ChildPoiNum" />

            <EditText
                android:id="@+id/et_child_num"
                style="@style/Text_Body_Pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_poi_id"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/tv_child_num"
                android:text="0" />

            <TextView
                android:id="@+id/tv_compound_id"
                style="@style/Text_Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_child_num"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="CompoundId" />

            <EditText
                android:id="@+id/et_compound_id"
                style="@style/Text_Body_Pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_child_num"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/tv_compound_id"
                android:text="0" />

            <TextView
                android:id="@+id/tv_poi_name"
                style="@style/Text_Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_compound_id"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="位置名称" />

            <EditText
                android:id="@+id/et_poi_name"
                style="@style/Text_Body_Pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_compound_id"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/tv_poi_name"
                android:text="上海师范大学徐汇校区" />

            <TextView
                android:id="@+id/tv_address"
                style="@style/Text_Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_poi_name"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="地址" />

            <EditText
                android:id="@+id/et_address"
                style="@style/Text_Body_Pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_poi_name"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/tv_address"
                android:text="上海市徐汇区桂林路100号" />

            <TextView
                android:id="@+id/tv_phone"
                style="@style/Text_Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_address"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="电话" />

            <EditText
                android:id="@+id/et_phone"
                style="@style/Text_Body_Pri"
                android:inputType="phone"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_address"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/tv_phone" />

            <TextView
                android:id="@+id/tv_region_name"
                style="@style/Text_Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_phone"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="所在区" />

            <EditText
                android:id="@+id/et_region_name"
                style="@style/Text_Body_Pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_phone"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/tv_region_name"
                android:text="上海市徐汇区" />

            <TextView
                android:id="@+id/tv_type_name"
                style="@style/Text_Body"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_region_name"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:text="类型" />

            <EditText
                android:id="@+id/et_type_name"
                style="@style/Text_Body_Pri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_region_name"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/tv_type_name"
                android:text="大专院校" />

            <Button
                android:id="@+id/btn_commit"
                style="@style/Bottom_Solid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_type_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="应用" />

        </RelativeLayout>
    </ScrollView>

</LinearLayout>