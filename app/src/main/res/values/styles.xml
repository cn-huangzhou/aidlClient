<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Bottom_Solid">
        <item name="android:background">@drawable/bottom_bg_solid</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Bottom_Stroke">
        <item name="android:background">@drawable/bottom_bg_stroke</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_main_body</item>
    </style>

    <style name="Text_Title">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_title</item>
    </style>

    <style name="Text_Body">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_main_body</item>
    </style>

    <style name="Text_Explain">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_explain</item>
    </style>

    <style name="Text_Hint">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_hint</item>
    </style>
</resources>
